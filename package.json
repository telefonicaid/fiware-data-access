{
  "name": "fda",
  "license": "AGPL-3.0-only",
  "version": "0.0.1",
  "description": "fiware-data-access",
  "homepage": "https://github.com/telefonicaid/fiware-data-access",
  "type": "module",
  "scripts": {
    "clean": "rm -rf package-lock.json && rm -rf node_modules",
    "dev": "nodemon fda.js",
    "lint": "eslint lib/ --cache",
    "lint:fix": "eslint  lib/ --cache --fix",
    "prettier": "prettier --config .prettierrc.json --write '**/**/**/**/*.js' '**/**/**/*.js' '**/**/*.js' '**/*.js' '*.js'",
    "start": "node .",
    "test": "jest --runInBand"
  },
  "engines": {
    "node": ">=24"
  },
  "dependencies": {
    "@duckdb/node-api": "~1.4.1-r.1",
    "express": "5.1.0",
    "pg": "~8.16.3",
    "mongodb": "~7.0.0",
    "pg-copy-streams": "~7.0.0",
    "@aws-sdk/client-s3": "~3.934.0",
    "@aws-sdk/lib-storage": "~3.934.0"
  },
  "devDependencies": {
    "eslint": "~8.18.0",
    "globals": "^16.3.0",
    "husky": "~4.3.8",
    "lint-staged": "~12.3.8",
    "eslint-plugin-prettier": "~4.0.0",
    "eslint-config-tamia": "~8.0.0",
    "jest": "~29.7.0",
    "jest-mock-extended": "4.0.0",
    "nodemon": "~3.1.10",
    "prettier": "~2.7.1",
    "jest": "~29.7.0",
    "supertest": "~6.3.4",
    "testcontainers": "~11.9.0",
    "@testcontainers/mongodb": "~11.9.0",
    "@testcontainers/postgresql": "~11.9.0",
    "@testcontainers/minio": "~11.9.0"
  },
  "jest": {
      "testEnvironment": "node",
      "globalSetup": "./tests/setup.cjs",
      "globalTeardown": "./tests/teardown.cjs",
      "transform": {}
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.md": [
      "prettier --parser markdown --tab-width 4 --print-width 120 --write --prose-wrap always"
    ],
    "*.js": [
      "prettier --config .prettierrc.json --write"
    ]
  }
}
